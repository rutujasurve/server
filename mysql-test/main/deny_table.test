CREATE DATABASE foodatabase;
CREATE USER foo;
CREATE TABLE foodatabase.t1 (a int);
INSERT INTO foodatabase.t1 values (1), (2), (3);
CREATE TABLE foodatabase.t2 (a int);
INSERT INTO foodatabase.t2 values (1), (2), (3);
GRANT ALL ON foodatabase.* TO foo;
--change_user foo
# This command should return both rows of t1.
select * from foodatabase.t1;
select * from foodatabase.t2;
--change_user root
select * from mysql.tables_priv;
DENY SELECT ON foodatabase.t1 TO foo;
select * from mysql.tables_priv;
--change_user foo
# The command should now fail with permission denied.
--error ER_TABLEACCESS_DENIED_ERROR
select * from foodatabase.t1;
INSERT INTO foodatabase.t1 values (4);
select * from foodatabase.t2;
--error ER_NO_SUCH_TABLE
select * from foodatabase.t3;
--change_user root
drop user foo;
drop database foodatabase;
